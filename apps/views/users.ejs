<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Daftar Users</title>
  <style>
    body { font-family: sans-serif; }
    table { border-collapse: collapse; width: 80%; margin: 50px auto; }
    th, td { padding: 10px; border: 1px solid #ccc; text-align: left; }
    th { background-color: #f5f5f5; }
  </style>
</head>
<body>
  <h2 style="text-align: center;">Daftar Users dari MySQL</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nama</th>
        <th>Email</th>
        <th>No. Telp</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.no_telp %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
